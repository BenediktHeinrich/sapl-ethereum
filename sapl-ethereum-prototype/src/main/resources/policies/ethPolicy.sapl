import EthereumPIP as ethereum

set "eth_policies"
deny-unless-permit


policy "simple_eth_policy"
permit
  action=="access" && resource=="ethereum"
where
  subject.<ethereum.auth>;



policy "eth_pip_test"
permit
  action == "a"
where
  subject.<ethereum.address> == "0x2678c7e529d61f14f7711053be92d0a923cda8d2";

